<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controlador.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorDirector</servlet-name>
        <servlet-class>controlador.ControladorDirector</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MenuCoordinador</servlet-name>
        <servlet-class>controlador.MenuCoordinador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorEnviarCorreos</servlet-name>
        <servlet-class>controlador.ControladorEnviarCorreos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorAlumno</servlet-name>
        <servlet-class>controlador.ControladorAlumno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorJustificar</servlet-name>
        <servlet-class>controlador.ControladorJustificar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorDocente</servlet-name>
        <servlet-class>controlador.ControladorDocente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorDirector</servlet-name>
        <url-pattern>/ControladorDirector</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MenuCoordinador</servlet-name>
        <url-pattern>/MenuCoordinador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorEnviarCorreos</servlet-name>
        <url-pattern>/ControladorEnviarCorreos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorAlumno</servlet-name>
        <url-pattern>/ControladorAlumno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorJustificar</servlet-name>
        <url-pattern>/ControladorJustificar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorDocente</servlet-name>
        <url-pattern>/ControladorDocente</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
